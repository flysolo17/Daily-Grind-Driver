<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.auth.LoginActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        android:layout_weight="1"
        app:shapeAppearance="@style/ShapeAppearance.App.MediumComponent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Express Delivery"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#313435"
                android:textSize="19sp"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ic_driver" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/login_with_google"
        android:id="@+id/buttonLoginWithGoogle"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_google_icon"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_google"
        android:fontFamily="@font/poppins"/>
</LinearLayout>